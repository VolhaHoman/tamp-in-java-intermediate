<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="My Test Suite">
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.mentoring.taf.UserSignUpAPITest"/>
            <class name="com.epam.mentoring.taf.UserSignUpUITest"/>
            <class name="com.epam.mentoring.taf.CommentAPITest"/>
            <class name="com.epam.mentoring.taf.CommentUITest"/>
        </classes>
    </test>
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.mentoring.taf.UserSignUpAPITest"/>
            <class name="com.epam.mentoring.taf.UserSignUpUITest"/>
            <class name="com.epam.mentoring.taf.CommentAPITest"/>
            <class name="com.epam.mentoring.taf.CommentUITest"/>
        </classes>
    </test>
</suite>
